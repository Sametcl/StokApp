@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>
                    @urn.URUNID
                </th>
                <td>
                    @urn.URUNAD
                </td>
                <td>
                    @urn.MARKA
                </td>
                <td>
                    @urn.URUNKATEGORI
                </td>
                <td>
                    @urn.FIYAT
                </td>
                <td>
                    @urn.STOK
                </td>
                <td>
                    <a href="/URUN/SIL/@urn.URUNID" class=" btn btn-danger">SİL</a>
                </td>
                <td>
                    <a href="/URUN/UrunGetir/@urn.URUNID" class=" btn btn-success">GÜNCELLE</a>
                </td>

            </tr>
        }
    </tbody>

</table>

<a href=" /Urun/UrunEKle/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>

<script>
    $('#tbl1').DataTable();
</script>

